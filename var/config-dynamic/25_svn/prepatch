# create svn directory
if [ "$1" = "--first" ]; then
  [ -d /var/lib/svn ] || mkdir /var/lib/svn
  rm -rf $SVNROOT/* &> /dev/null
  rm -rf $SVNCONFDIR/* &> /dev/null
  # create a test repo
  linuxmuster-svn --create --group=teachers --reponame=test
fi

# create apache.conf for websvn
[ -L /etc/apache2/conf.d/websvn ] || ln -s /etc/websvn/apache.conf  /etc/apache2/conf.d/websvn
