# patch internal interface
sed -e "s/^INTERFACES=.*/INTERFACES=\"$intern\"/" /etc/default/dhcp3-server > /etc/default/dhcp3-server.tmp
cp -f /etc/default/dhcp3-server.tmp /etc/default/dhcp3-server && rm -f /etc/default/dhcp3-server.tmp

# create rndc-keyfile if necessary
if [ ! -e /etc/bind/rndc.key ]; then
  echo "Creating /etc/bind/rndc.key ..."
  rndc-confgen -a -u bind
else
  chown bind /etc/bind/rndc.key
fi

# simply start the service
/etc/init.d/dhcp3-server start
