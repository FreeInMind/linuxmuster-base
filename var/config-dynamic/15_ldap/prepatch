# necessary to trick sophomorix
if [ "$1" = "--first" ]; then
 pg_dropcluster 7.4 main &> /dev/null
 pg_dropcluster 8.1 main &> /dev/null
 pg_createcluster 8.1 main
 cp $STATICTPLDIR/etc/postgresql/8.1/main/* /etc/postgresql/8.1/main
fi
/etc/init.d/postgresql-8.1 start


# clear samba browse cache
rm -f /var/lib/samba/wins.dat


# copy imaging related template
cp smb.conf.$imaging smb.conf

