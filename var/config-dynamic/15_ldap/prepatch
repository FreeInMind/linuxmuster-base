# necessary to trick sophomorix
if [ "$1" = "--first" ]; then
	pg_dropcluster 8.3 main &> /dev/null
	pg_createcluster 8.3 main
	cp $STATICTPLDIR/etc/postgresql/8.3/main/* /etc/postgresql/8.3/main
fi
/etc/init.d/postgresql-8.3 start


# clear samba browse cache
rm -f /var/lib/samba/wins.dat


# copy imaging related template
cp smb.conf.$imaging smb.conf

