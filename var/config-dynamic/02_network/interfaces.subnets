# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).
#

# The loopback network interface
auto lo
iface lo inet loopback

# These interfaces are brought up automatically
auto @@iface_lan@@
iface @@iface_lan@@ inet static
	address @@serverip@@
	netmask @@subnetmask@@
	network @@subnetip@@
	broadcast @@subnetbc@@
	gateway @@ipcopip@@
	# dns-* options are implemented by the resolvconf package, if installed
	dns-nameservers @@serverip@@
	dns-search @@domainname@@
	# set global static route
	up route add -net @@internalnet@@ netmask @@internmask@@ gw @@subnetgw@@ @@iface_lan@@
