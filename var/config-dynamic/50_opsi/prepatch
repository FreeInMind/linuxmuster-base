echo "### 50_opsi prepatch"

# initial setup
[ "$1" = "--first" -a -n "$opsiip" -a -n "$opsipw" ] && linuxmuster-opsi --setup --password="$opsipw" --unattended

# modify only if network settings were not changed or if opsi has been enabled
([ "$1" = "--modify" -a -n "$opsiip" -a "$opsi" != "$opsi_old" ] || [ "$1" = "--modify" -a -n "$opsiip" -a "$serverip" = "$serverip_old" -a -z "$update_certs" ]) && linuxmuster-opsi --setup --unattended

