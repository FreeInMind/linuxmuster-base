# patch miniserv.conf with servername
sed -e "s/^host=.*/host=$servername/" /etc/webmin/miniserv.conf > /etc/webmin/miniserv.conf.tmp
cp -f /etc/webmin/miniserv.conf.tmp /etc/webmin/miniserv.conf && rm -f /etc/webmin/miniserv.conf.tmp

# add crypted root password
if [ "$1" = "--first" ]; then
	rootpw=`grep ^root: /etc/shadow | cut -f2 -d:`
	echo "root:$rootpw" > /etc/webmin/miniserv.users
fi

# start webmin
/etc/init.d/webmin start
