# patch miniserv.conf with servername
[ "$1" = "--modify" ] && backup_file /etc/webmin/miniserv.conf
sed -e "s/^host=.*/host=$servername/" -i /etc/webmin/miniserv.conf

# add crypted root password
if [ "$1" = "--first" ]; then
	rootpw=`grep ^root: /etc/shadow | cut -f2 -d:`
	echo "root:$rootpw" > /etc/webmin/miniserv.users
	[ -d /var/log/webmin ] || mkdir -p /var/log/webmin
fi

# start webmin
/etc/init.d/webmin start
